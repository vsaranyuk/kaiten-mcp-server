# Kaiten API Configuration
KAITEN_API_URL=https://your-domain.kaiten.ru/api/latest
KAITEN_API_TOKEN=your_api_token_here

# Default Space ID - all card operations will use this space by default
# To search in all spaces, user must explicitly request it
KAITEN_DEFAULT_SPACE_ID=12345

# Performance and Reliability (Optional - defaults shown)
# Maximum concurrent API requests (1-20)
KAITEN_MAX_CONCURRENT_REQUESTS=5

# Cache TTL in seconds (0 to disable caching)
KAITEN_CACHE_TTL_SECONDS=300

# Request timeout in milliseconds (1-60000)
KAITEN_REQUEST_TIMEOUT_MS=10000

# ============================================
# LOGGING CONFIGURATION (v2.3.0+)
# ============================================

# Enable/disable all logging (default: true)
KAITEN_LOG_ENABLED=true

# Log level: debug, info, notice, warning, error, critical, alert, emergency (default: error)
# Production: error | Development: info | Debug: debug
KAITEN_LOG_LEVEL=error

# Send logs to MCP client via notifications/message (default: false)
# Useful for debugging MCP integrations
KAITEN_LOG_MCP_ENABLED=false

# Write logs to file (default: false)
# Recommended for production debugging
KAITEN_LOG_FILE_ENABLED=false

# Path to log file (default: ./logs/kaiten-mcp.log)
KAITEN_LOG_FILE_PATH=./logs/kaiten-mcp.log

# Log all HTTP requests/responses (default: false)
# Very verbose, use for debugging API issues only
KAITEN_LOG_REQUESTS=false

# Collect performance metrics (default: false)
# Useful for analyzing tool performance and latency
KAITEN_LOG_METRICS=false

# ============================================
# RECOMMENDED PROFILES
# ============================================

# Production (minimal logging, errors only):
# KAITEN_LOG_ENABLED=true
# KAITEN_LOG_LEVEL=error
# KAITEN_LOG_MCP_ENABLED=false
# KAITEN_LOG_FILE_ENABLED=false
# KAITEN_LOG_REQUESTS=false
# KAITEN_LOG_METRICS=false

# Development (moderate logging for troubleshooting):
# KAITEN_LOG_ENABLED=true
# KAITEN_LOG_LEVEL=info
# KAITEN_LOG_MCP_ENABLED=false
# KAITEN_LOG_FILE_ENABLED=true
# KAITEN_LOG_REQUESTS=false
# KAITEN_LOG_METRICS=true

# Debug (full logging for deep analysis):
# KAITEN_LOG_ENABLED=true
# KAITEN_LOG_LEVEL=debug
# KAITEN_LOG_MCP_ENABLED=true
# KAITEN_LOG_FILE_ENABLED=true
# KAITEN_LOG_REQUESTS=true
# KAITEN_LOG_METRICS=true