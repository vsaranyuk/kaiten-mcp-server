# Kaiten API Configuration
KAITEN_API_URL=https://your-domain.kaiten.ru/api/latest
KAITEN_API_TOKEN=your_api_token_here

# Default Space ID - all card operations will use this space by default
# To search in all spaces, user must explicitly request it
KAITEN_DEFAULT_SPACE_ID=12345

# Performance and Reliability (Optional - defaults shown)
# Maximum concurrent API requests (1-20)
KAITEN_MAX_CONCURRENT_REQUESTS=5

# Cache TTL in seconds (0 to disable caching)
KAITEN_CACHE_TTL_SECONDS=300

# Request timeout in milliseconds (1-60000)
KAITEN_REQUEST_TIMEOUT_MS=10000